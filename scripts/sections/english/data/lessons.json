    {
      "id": "lesson_001",
      "theme": "family",
      "title": "My Family",
      "titleFr": "Ma Famille",
      "level": 1,
      "xpReward": 20,
      "duration": 10,
      "description": "Apprends les membres de la famille en anglais",
      
      "modes": {
        "classic": {
          "available": true,
          "content": "Les membres de la famille sont importants ! En anglais, on dit 'father' pour père, 'mother' pour mère...",
          "quiz": [
            {
              "question": "Comment dit-on 'père' en anglais ?",
              "options": ["father", "brother", "uncle", "grandfather"],
              "correct": 0
            }
          ]
        },
        
        "interactive": {
          "available": true,
          "exercises": [
            {
              "id": "ex_001_01",
              "type": "translate",
              "instruction": "Traduis ce mot en français",
              "word": "father",
              "answer": "père",
              "hints": ["C'est le papa", "Il commence par P"],
              "audio": "father"
            },
            {
              "id": "ex_001_02",
              "type": "translate",
              "instruction": "Traduis ce mot en français",
              "word": "mother",
              "answer": "mère",
              "hints": ["C'est la maman"],
              "audio": "mother"
            },
            {
              "id": "ex_001_03",
              "type": "listen",
              "instruction": "Écoute et écris le mot en anglais",
              "audio": "sister",
              "answer": "sister",
              "hints": ["C'est ta sœur"]
            },
            {
              "id": "ex_001_04",
              "type": "match",
              "instruction": "Associe les mots",
              "pairs": [
                { "en": "brother", "fr": "frère" },
                { "en": "grandmother", "fr": "grand-mère" },
                { "en": "grandfather", "fr": "grand-père" }
              ]
            },
            {
              "id": "ex_001_05",
              "type": "fill",
              "instruction": "Complète la phrase",
              "sentence": "My ___ is called John",
              "answer": "father",
              "options": ["father", "mother", "sister"],
              "translation": "Mon père s'appelle John"
            }
          ]
        }
      }
    },
    
